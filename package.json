{
  "name": "tummy-ai",
  "type": "module",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start:frontend": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:backend": "tsc backend/app/src/server.ts --outDir dist --target ES2022 --module ES2022 --moduleResolution bundler --allowSyntheticDefaultImports",
    "start:backend": "yarn build:backend && node dist/backend/app/src/server.js",
    "dev:backend": "tsx watch backend/app/src/server.ts --watch=backend/app",
    "services:start:daemon": "docker compose -f backend/docker-compose.yml up -d",
    "services:start": "docker compose -f backend/docker-compose.yml up",
    "services:stop": "docker compose -f backend/docker-compose.yml down",
    "prisma:generate": "yarn prisma generate --schema backend/prisma/schema/schema.prisma",
    "prisma:migrate": "yarn prisma migrate dev --schema backend/prisma/schema/schema.prisma",
    "lint": "expo lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.890.0",
    "@aws-sdk/lib-storage": "^3.890.0",
    "@expo/vector-icons": "^15.0.2",
    "@fastify/cors": "^11.1.0",
    "@prisma/client": "^6.16.2",
    "@react-navigation/bottom-tabs": "^7.4.0",
    "@react-navigation/elements": "^2.6.3",
    "@react-navigation/native": "^7.1.8",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.2",
    "expo": "~54.0.7",
    "expo-av": "^16.0.7",
    "expo-constants": "~18.0.8",
    "expo-font": "~14.0.8",
    "expo-haptics": "~15.0.7",
    "expo-image": "~3.0.8",
    "expo-image-picker": "^17.0.8",
    "expo-linking": "~8.0.8",
    "expo-router": "~6.0.4",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "expo-symbols": "~1.0.7",
    "expo-system-ui": "~6.0.7",
    "expo-web-browser": "~15.0.7",
    "fastify": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.4",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.0",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "^15.13.0",
    "react-native-web": "~0.21.0",
    "react-native-worklets": "0.5.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "@types/react": "~19.1.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~10.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-native": "^5.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prisma": "^6.16.2",
    "tsx": "^4.19.2",
    "typescript": "~5.9.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "private": true
}
